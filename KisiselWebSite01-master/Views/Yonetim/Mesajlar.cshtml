@model IEnumerable<Messages>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Gelen Mesajlar</h2>
<hr />

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Ad Soyad</th>
                <th scope="col">Gönderilme Tarihi</th>
                <th scope="col">Mail Adresi</th>
                <th scope="col">Başlık</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.NameSurname</td>
                <td>@item.CreatedDate</td>
                <td>@item.MailAdress</td>
                @if (item.Title.Length >= 10)
                {
                    <td>@item.Title.Substring(0,10)</td>
                }
                else
                {
                    <td>@item.Title</td>
                }
                <td>
                    <a href="/Yonetim/MesajOku/@item.Id" class="btn btn-info"><i class="fas fa-angle-up"></i> Mesajı Oku</a>
                    <a href="/Yonetim/MesajSil/@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Mesajı Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            Herhangi Bir Mesaj Gönderilmemiş
        </div>
    </div>
}


