@model IEnumerable<Portfolio>
@{
    ViewData["Title"] = "Portfolyo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Portfolyo</h2>


<a href="/Yonetim/YeniEkle/" class="btn btn-info"><i class="fas fa-plus-circle"></i> Yeni Ekle</a>

<hr />

@if (Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">Resim</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Image</td>
                    <td>
                        <a href="/Yonetim/PortfolioIncele/@item.Id" class="btn btn-info"><i class="fas fa-angle-up"></i> Portfolyo İncele</a>
                        <a href="/Yonetim/PortfolioGuncelle/@item.Id" class="btn btn-success"><i class="fas fa-wrench"></i> Portfolyo Güncelle</a>
                        <a href="/Yonetim/PortfolioSil/@item.Id" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Portfolyo Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            Portfolyonuza Herhangi Bir Dosya Eklenmemiş
        </div>
    </div>
}


